---
import { services } from '../data/content';
---

<section id="services" class="relative py-24 overflow-hidden">
  <!-- Background -->
  <div class="absolute inset-0 bg-gradient-to-b from-slate-900 to-slate-950"></div>
  <div class="absolute top-1/4 left-0 w-96 h-96 bg-blue-500/5 rounded-full blur-3xl"></div>
  <div class="absolute bottom-1/4 right-0 w-96 h-96 bg-purple-500/5 rounded-full blur-3xl"></div>
  
  <div class="container relative max-w-6xl mx-auto px-6">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <span class="inline-block px-4 py-2 glass rounded-full text-sm font-medium text-blue-400 mb-4">
        What I Offer
      </span>
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
        Services
      </h2>
      <p class="text-slate-400 max-w-2xl mx-auto">
        Specialized expertise to bring your digital products to life
      </p>
    </div>
    
    <!-- Services Grid -->
    <div class="grid md:grid-cols-3 gap-8">
      {services.map((service, index) => (
        <article 
          class="glass rounded-2xl p-8 group hover:bg-white/5 transition-all duration-300 hover:-translate-y-2 section-animate"
          style={`--delay: ${0.2 + index * 0.15}s`}
        >
          <!-- Icon -->
          <div class="w-14 h-14 flex items-center justify-center glass rounded-xl text-3xl mb-6 group-hover:scale-110 transition-transform">
            {service.icon}
          </div>
          
          <!-- Title -->
          <h3 class="text-xl font-bold text-white mb-3 group-hover:text-blue-400 transition-colors">
            {service.title}
          </h3>
          
          <!-- Description -->
          <p class="text-slate-400 text-sm mb-6">
            {service.description}
          </p>
          
          <!-- Tech Stack -->
          <div class="flex flex-wrap gap-2 pt-4 border-t border-slate-700/50">
            {service.technologies.map((tech) => (
              <span class="px-2 py-1 text-xs text-slate-500 bg-slate-800/50 rounded">
                {tech}
              </span>
            ))}
          </div>
        </article>
      ))}
    </div>
  </div>
</section>

---
import { experiences } from '../data/content';
---

<section id="experience" class="relative py-20 overflow-hidden">
  <!-- Background -->
  <div class="absolute inset-0 bg-gradient-to-b from-slate-900 to-slate-950"></div>
  
  <div class="container relative max-w-5xl mx-auto px-6">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <span class="inline-block px-4 py-2 glass rounded-full text-sm font-medium text-purple-400 mb-4">
        Experience
      </span>
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
        Professional Journey
      </h2>
      <p class="text-slate-400 max-w-2xl mx-auto">
        Building scalable systems and leading high-performing engineering teams
      </p>
    </div>
    
    <!-- Timeline -->
    <div class="relative">
      {experiences.map((exp, index) => (
        <div 
          class="relative pl-16 pb-12 last:pb-0 section-animate"
          style={`--delay: ${0.2 + index * 0.2}s`}
        >
          <!-- Timeline Line -->
          {index < experiences.length - 1 && (
            <div class="absolute left-6 top-12 bottom-0 w-0.5 bg-gradient-to-b from-blue-500/50 to-transparent"></div>
          )}
          
          <!-- Timeline Dot -->
          <div class="absolute left-4 top-1 w-5 h-5 rounded-full bg-blue-500 ring-4 ring-blue-500/20 z-10"></div>
          
          <!-- Content Card -->
          <div class="glass rounded-2xl p-6 hover:bg-white/5 transition-all duration-300 group">
            <!-- Header -->
            <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-4">
              <div>
                <h3 class="text-xl md:text-2xl font-bold text-white group-hover:text-blue-400 transition-colors">
                  {exp.role}
                </h3>
                <p class="text-slate-400">
                  {exp.company} <span class="text-slate-600">/ {exp.location}</span>
                </p>
              </div>
              <span class="mt-2 md:mt-0 px-3 py-1 glass rounded-full text-sm text-slate-400">
                {exp.period}
              </span>
            </div>
            
            <!-- Highlights -->
            <ul class="space-y-2 mb-4">
              {exp.highlights.map((highlight) => (
                <li class="flex items-start text-slate-300 text-sm">
                  <span class="mr-3 text-blue-500 mt-1">â–¹</span>
                  {highlight}
                </li>
              ))}
            </ul>
            
            <!-- Tags -->
            <div class="flex flex-wrap gap-2">
              {exp.tags.map((tag) => (
                <span class="px-3 py-1 bg-blue-500/10 border border-blue-500/20 rounded-full text-xs font-medium text-blue-400">
                  {tag}
                </span>
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

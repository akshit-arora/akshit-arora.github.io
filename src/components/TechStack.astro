---
import { techStack } from '../data/content';
---

<section id="tech" class="relative py-20 overflow-hidden">
  <!-- Background -->
  <div class="absolute inset-0 bg-gradient-to-b from-slate-900 to-slate-950"></div>
  
  <div class="container relative max-w-6xl mx-auto px-6">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <span class="inline-block px-4 py-2 glass rounded-full text-sm font-medium text-cyan-400 mb-4">
        Skills
      </span>
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
        Tech Stack
      </h2>
      <p class="text-slate-400 max-w-2xl mx-auto">
        Technologies I use to build scalable, high-performance systems
      </p>
    </div>
    
    <!-- Tech Categories -->
    <div class="grid md:grid-cols-3 gap-8">
      {techStack.map((category, index) => (
        <div 
          class="glass rounded-2xl p-6 section-animate"
          style={`--delay: ${0.2 + index * 0.15}s`}
        >
          <!-- Category Header -->
          <div class="flex items-center gap-3 mb-6">
            <span class="text-3xl">{category.icon}</span>
            <h3 class="text-xl font-bold text-white">{category.name}</h3>
          </div>
          
          <!-- Technologies -->
          <div class="flex flex-wrap gap-3">
            {category.technologies.map((tech) => (
              <span 
                class="tech-icon px-4 py-2 glass rounded-lg text-sm font-medium text-slate-300 cursor-default hover:text-white hover:bg-white/10"
              >
                {tech}
              </span>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

---
import { projects } from '../data/content';
---

<section id="projects" class="relative py-24 overflow-hidden">
  <!-- Background -->
  <div class="absolute inset-0 bg-gradient-to-b from-slate-950 to-slate-900"></div>
  <div class="absolute top-1/2 right-0 w-96 h-96 bg-emerald-500/5 rounded-full blur-3xl"></div>
  
  <div class="container relative max-w-6xl mx-auto px-6">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <span class="inline-block px-4 py-2 glass rounded-full text-sm font-medium text-emerald-400 mb-4">
        Featured Work
      </span>
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
        Case Studies
      </h2>
      <p class="text-slate-400 max-w-2xl mx-auto">
        Real problems solved with measurable business impact
      </p>
    </div>
    
    <!-- Case Studies Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {projects.map((project, index) => (
        <article 
          class="glass rounded-2xl p-6 group hover:bg-white/5 transition-all duration-300 hover:-translate-y-2 flex flex-col section-animate"
          style={`--delay: ${0.2 + index * 0.15}s`}
        >
          <!-- Project Number -->
          <div class="text-5xl font-bold text-slate-800 mb-4 group-hover:text-slate-700 transition-colors">
            {String(index + 1).padStart(2, '0')}
          </div>
          
          <!-- Title -->
          <h3 class="text-xl font-bold text-white mb-4 group-hover:text-emerald-400 transition-colors">
            {project.title}
          </h3>
          
          <!-- Problem -->
          <div class="mb-4">
            <span class="text-xs font-semibold text-red-400 uppercase tracking-wide">The Problem</span>
            <p class="text-slate-400 text-sm mt-1">
              {project.problem}
            </p>
          </div>
          
          <!-- Solution -->
          <div class="mb-4">
            <span class="text-xs font-semibold text-blue-400 uppercase tracking-wide">The Solution</span>
            <p class="text-slate-400 text-sm mt-1">
              {project.solution}
            </p>
          </div>
          
          <!-- Impact -->
          <div class="mb-4">
            <span class="text-xs font-semibold text-emerald-400 uppercase tracking-wide">The Impact</span>
            <p class="text-slate-300 text-sm mt-1 font-medium">
              {project.impact}
            </p>
          </div>
          
          <!-- Technologies -->
          <div class="flex flex-wrap gap-2 mt-auto pt-4 border-t border-slate-700/50">
            {project.technologies.map((tech) => (
              <span class="px-2 py-1 text-xs text-slate-500 bg-slate-800/50 rounded">
                {tech}
              </span>
            ))}
          </div>
        </article>
      ))}
    </div>
  </div>
</section>

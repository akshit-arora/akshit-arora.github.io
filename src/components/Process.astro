---
import { processSteps } from '../data/content';
---

<section id="process" class="relative py-24 overflow-hidden">
  <!-- Background -->
  <div class="absolute inset-0 bg-slate-950"></div>
  <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-gradient-radial from-blue-500/5 to-transparent rounded-full"></div>
  
  <div class="container relative max-w-6xl mx-auto px-6">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <span class="inline-block px-4 py-2 glass rounded-full text-sm font-medium text-purple-400 mb-4">
        How I Work
      </span>
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
        My Process
      </h2>
      <p class="text-slate-400 max-w-2xl mx-auto">
        A proven workflow that delivers results efficiently
      </p>
    </div>
    
    <!-- Process Steps -->
    <div class="relative">
      <!-- Connector Line (Desktop) -->
      <div class="hidden md:block absolute top-12 left-[10%] right-[10%] h-0.5 bg-gradient-to-r from-blue-500/20 via-purple-500/40 to-emerald-500/20"></div>
      
      <div class="grid md:grid-cols-4 gap-8">
        {processSteps.map((step, index) => (
          <div 
            class="relative text-center section-animate"
            style={`--delay: ${0.2 + index * 0.15}s`}
          >
            <!-- Step Number Circle -->
            <div class="relative z-10 w-24 h-24 mx-auto mb-6 flex items-center justify-center glass rounded-full border border-slate-700/50 group hover:border-blue-500/50 transition-all duration-300">
              <span class="text-4xl group-hover:scale-110 transition-transform">
                {step.icon}
              </span>
              <div class="absolute -top-2 -right-2 w-8 h-8 flex items-center justify-center bg-blue-600 rounded-full text-white text-sm font-bold">
                {index + 1}
              </div>
            </div>
            
            <!-- Title -->
            <h3 class="text-lg font-bold text-white mb-2">
              {step.title}
            </h3>
            
            <!-- Description -->
            <p class="text-slate-400 text-sm">
              {step.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

---
import { stats } from '../data/content';
---

<section id="stats" class="relative py-20 overflow-hidden">
  <!-- Background -->
  <div class="absolute inset-0 bg-gradient-to-b from-slate-950 to-slate-900"></div>
  
  <div class="container relative max-w-6xl mx-auto px-6">
    <!-- Section Title -->
    <div class="text-center mb-12">
      <span class="inline-block px-4 py-2 glass rounded-full text-sm font-medium text-blue-400 mb-4">
        The Architect
      </span>
      <h2 class="text-3xl md:text-4xl font-bold text-white">
        Impact by Numbers
      </h2>
    </div>
    
    <!-- Stats Grid -->
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-6">
      {stats.map((stat, index) => (
        <div 
          class="glass rounded-2xl p-6 text-center group hover:bg-white/5 transition-all duration-300 hover:-translate-y-1 section-animate"
          style={`--delay: ${0.2 + index * 0.1}s`}
        >
          <!-- Icon -->
          <div class="text-4xl mb-4 group-hover:scale-110 transition-transform duration-300">
            {stat.icon}
          </div>
          
          <!-- Value -->
          <div class="stat-number text-4xl md:text-5xl font-bold bg-gradient-to-r from-blue-400 to-cyan-400 bg-clip-text text-transparent mb-2" style={`--delay: ${0.5 + index * 0.2}s`}>
            {stat.value}
          </div>
          
          <!-- Label -->
          <div class="text-slate-400 font-medium text-sm uppercase tracking-wider">
            {stat.label}
          </div>
          
          <!-- Description (shown on hover) -->
          <div class="mt-2 text-xs text-slate-500 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
            {stat.description}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
